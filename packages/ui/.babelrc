{
  "presets": [
    ["@babel/preset-env", {
      "targets": {
        "browsers": ["last 3 versions"],
        "node": "8.4"
      }
    }],
    "@babel/preset-react"
  ],
  "plugins": [
    "@babel/plugin-proposal-class-properties",
    "@babel/plugin-proposal-object-rest-spread"
  ],
  "env": {
    "mjs": {
      "presets": [
        ["@babel/preset-env", {
          "targets": {
            "browsers": ["last 3 versions"],
            "node": "8.4"
          },
          "modules": false,
          "loose": true
        }]
      ]
    }
  }
}
